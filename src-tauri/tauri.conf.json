    "version": "0.0.12"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "setPosition": true,
        "startDragging": true,
        "center": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "sys-speed",
